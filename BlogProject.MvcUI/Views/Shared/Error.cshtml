@using BlogProject.Shared.Entities.Concrete
@{
    Layout = "_ErrorLayout";
    ViewBag.Title = "Sunuc Hatası (500)";
    MvcErrorModel errorModel = ViewData["MvcErrorModel"] as MvcErrorModel;
}

<div class="col-lg-12">
    <div class="text-center mt-4">
        <h1 class="display-1">500</h1>
        <p class="lead">@errorModel.Message</p>
        @if(errorModel.Detail != null)
        {
            <p class="lead">@errorModel.Detail</p>
        }
        <a class="text-warning" asp-controller="Home" asp-action="Index">
            <i class="fa-fast-backward mr-1"></i>
            Anasayfaya dönmek için tıklayınız
        </a>
    </div>
</div>